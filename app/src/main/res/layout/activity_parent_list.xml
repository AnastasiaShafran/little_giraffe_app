<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anastasia.myfirstactivityproject.ParentsApp.ParentsActivity"
    android:background="@drawable/giraffbackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Parent!"
        android:textColor="#a77206"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:id="@+id/lblParentHello"/>


    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9d546"
        android:id="@+id/cwParentApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"></CalendarView>

    <Button
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose yor Kid"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/btnChooseKid"
        android:textColor="#faf8f8"
        android:layout_below="@+id/lblParentHello"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kid Name"
        android:layout_below="@id/btnChooseKid"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#e980470a"
        android:id="@+id/lblSelectedKid"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lblSelectedKid"
        android:layout_marginLeft="15dp"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your kid Activities today:"
            android:id="@+id/lblTitleActivity"
            android:textColor="#faf8f8"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblArrive"
                android:text="Arrive:"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                android:layout_marginLeft="68dp"
                android:textColor="#0a0909"
                android:id="@+id/lblYesArr"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBreakfast"
            android:text="Breakfast:"
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="8dp"
            android:layout_marginLeft="45dp"
            android:textColor="#0a0909"
            android:id="@+id/lblYesBreak"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMorningSleep"
                android:text="Morning Sleep:"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:textColor="#0a0909"
                android:id="@+id/lblYesMorn"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblLaunch"
            android:text="Launch:"
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="8dp"
            android:layout_marginLeft="60dp"
            android:textColor="#0a0909"
            android:id="@+id/lblYesLaunch"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblAfternoonSleep"
                android:text="Afternoon Sleep:"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0a0909"
                android:id="@+id/lblYesAfter"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblFecal"
                android:text="Fecal:"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                android:layout_marginLeft="72dp"
                android:textColor="#0a0909"
                android:id="@+id/lblYesFecal"
                />
        </LinearLayout>

        <Button
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Information:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/btnTeacherInfoForParent"
            android:textColor="#faf8f8"
            android:layout_marginTop="15dp"/>

        <ListView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/lst"></ListView>


    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgIcon"
        android:layout_alignTop="@+id/btnChooseKid"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblWeather"
        android:text="City"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/lblTemp"
        android:layout_toRightOf="@+id/lblTemp"
        android:layout_toEndOf="@+id/lblTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDesc"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Desc"
        android:layout_above="@+id/lblSelectedKid"
        android:layout_alignLeft="@+id/lblTemp"
        android:layout_alignStart="@+id/lblTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTemp"
        android:text="Temp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:layout_toEndOf="@+id/imgIcon" />


</RelativeLayout>

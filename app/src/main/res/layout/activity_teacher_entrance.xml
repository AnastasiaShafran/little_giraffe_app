<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anastasia.myfirstactivityproject.teacherapp.TeacherEntranceActivity"
    android:background="@drawable/teacher">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teachEntrance"
        android:textSize="45dp"
        android:textColor="#f5fe0a"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblTitleTeacherApp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View your Little Giraffes"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/btnEntryTeacher"
        android:layout_marginTop="35dp"
        android:background="@drawable/yellowbutton"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/lblTitleTeacherApp"
        android:layout_toStartOf="@+id/btnShowSchedule" />

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#101010"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnPickDate"
        android:layout_alignEnd="@+id/btnShowSchedule" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/purplebutton"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/btnPickDate"
        android:layout_marginLeft="100dp"
        android:layout_alignTop="@+id/btnEntryTeacher"
        android:layout_alignEnd="@+id/lblTitleTeacherApp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/btnShowSchedule"
        android:background="@drawable/yellowbutton"
        android:layout_above="@+id/lblDate"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

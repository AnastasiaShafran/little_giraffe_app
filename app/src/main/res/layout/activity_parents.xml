<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anastasia.myfirstactivityproject.ParentsApp.ParentsActivity"
    android:background="@drawable/giraffbackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Parent!"
        android:textColor="#a77206"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:id="@+id/lblParentHello"/>

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9d546"
        android:id="@+id/cwParentApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"></CalendarView>

    <Button
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose yor Kid"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/btnChooseKid"
        android:textColor="#faf8f8"
        android:layout_below="@+id/lblParentHello"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kid Name"
        android:layout_below="@id/btnChooseKid"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#e980470a"
        android:id="@+id/lblSelectedKid"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lblSelectedKid"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your kid Activities today:"
            android:id="@+id/lblTitleActivity"
            android:textColor="#faf8f8"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblArrive"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBreakfast"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblMorningSleep"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblLaunch"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblAfternoonSleep"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblFecal"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#0a0909"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anastasia.myfirstactivityproject.ParentsApp.ParentsActivity"
    android:background="@drawable/giraffbackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo Parent!"
        android:textColor="#050505"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/lblParetHaloTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose yor Kid Group"
        android:textColor="#faf8f8"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@id/lblParetHaloTitle"
        android:id="@+id/lblChooseKidParent"/>
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:background="#f9d546"
        android:layout_alignTop="@+id/lblChooseKidParent"
        android:layout_toRightOf="@+id/lblChooseKidParent"
        android:layout_toEndOf="@+id/lblChooseKidParent"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"></Spinner>
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9d546"
        android:id="@+id/cwParentApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"></CalendarView>

    <Button
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose yor Kid"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnChooseKid"
        android:textColor="#faf8f8"
        android:layout_alignBottom="@+id/lblChooseKidParent"
        android:layout_toRightOf="@+id/spinner"
        android:layout_toEndOf="@+id/spinner" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kid Name"
        android:layout_below="@id/btnChooseKid"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/lblSelectedKid"/>

    <ListView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/lstKidsActivity"
        android:layout_below="@id/lblSelectedKid"></ListView>

</RelativeLayout>

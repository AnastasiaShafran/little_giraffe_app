<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="1">


        <TableRow
            android:layout_width="90dp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#acf27d"
                android:layout_marginTop="20dp"
                android:layout_column="1"
                >
            </ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblFirstTeacherName"
                android:text="First Name"
                android:textColor="#0a0909"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_column="2"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblLastTeacherName"
                android:text="Last Name"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"
                android:layout_column="3"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblTeacherAge"
                android:text="Age"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="30dp"
                android:layout_column="4" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblTeacherPhone"
                android:text=" Phone "
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#0a0909"
                android:layout_marginLeft="10dp"
                android:layout_column="5" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/btnTeacherUpdate"
                android:text="Update"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_column="6" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/btnTeacherRemove"
                android:text="Remove"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_column="7" />


        </TableRow>




    </TableLayout>

</LinearLayout>